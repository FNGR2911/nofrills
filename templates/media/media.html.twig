{%
  set classes = [
    'media',
    'media--' ~ media.bundle()|clean_class,
    not media.isPublished() ? '--unpublished',
    view_mode ? '--view-mode--' ~ view_mode|clean_class,
  ]
%}

<div{{ attributes.addClass(classes) }}>
  {{ title_suffix.contextual_links }}
  {% if content %}
    {{ content }}
  {% endif %}
</div>
